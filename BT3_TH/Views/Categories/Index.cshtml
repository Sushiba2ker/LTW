@model IEnumerable<BT3_TH.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Category</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>